<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pintr_v_0_01.PintrMain" >

<LinearLayout
	android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    style="@style/generalPageBackground">
   
    <include layout="@layout/pintr_g_99_header_view"/>
  
		
	<ScrollView
		android:id="@+id/interestsOverviewPageMain"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
		   
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="20dp"
		    android:orientation="vertical"
		    android:paddingBottom="@dimen/activity_vertical_margin" >
		          
		    <LinearLayout
		    	android:orientation="horizontal"
				android:id="@+id/YourInterestsView" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    
				<TextView
				    android:id="@+id/YourInterestsTitleLabel" 
	        		android:layout_weight="10"
			       	style="@style/SubTitleText"
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:paddingBottom="10dp"
				    android:paddingTop="10dp" 
			        android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Your Interests" />
				
				
				</LinearLayout>
				
		    
			 <LinearLayout
		    	android:orientation="vertical"
				android:id="@+id/YourInterestsDisplayView" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			</LinearLayout>
		    
		 
		    <LinearLayout
		    	android:orientation="horizontal"
				android:id="@+id/InterestTopicsView" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    			
		    
				<TextView
				    android:id="@+id/InterestsListTitleLabel"
	        		android:layout_weight="10" 
			       	style="@style/SubTitleText"
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:paddingBottom="10dp"
				    android:paddingTop="10dp" 
			        android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Add Interests" />
				
				<ImageView
	        		android:layout_weight="1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
				    android:src="@drawable/light_grey_left_arrow" />
				
			</LinearLayout>
	
		    <View
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:background="@color/greyMed"/>
		    
		    <LinearLayout
		    	android:orientation="horizontal"
		    	android:visibility="gone"
				android:id="@+id/InterestSubBtnView" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    			
		    
				<TextView
				    android:id="@+id/InterestSubBtnTitleLabel"
	        		android:layout_weight="10" 
			       	style="@style/SubTitleText"
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:paddingBottom="10dp"
				    android:paddingTop="10dp" 
			        android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="I'm Done" />
				
				<ImageView
	        		android:layout_weight="1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
				    android:src="@drawable/light_grey_left_arrow" />
				
			</LinearLayout>
		</LinearLayout>
		
	</ScrollView>


</LinearLayout>


<include layout="@layout/pintr_g_96_settings_menu_view"/>
    
    
</RelativeLayout>

