<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:orientation="vertical"
    android:id="@+id/eventSummaryView"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="com.example.pintr_v_0_01.PintrMain" >
		
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="5dp"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:paddingTop="5dp"
		android:background="@drawable/eventsumview_background"
	    android:orientation="vertical" >
	    
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_marginTop="10dp" >
		    <TextView
		        android:id="@+id/eventTitle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Large Text"
       			android:layout_alignParentLeft="true"
    			style="@style/EvtSumTextBig"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		    
		    <ImageView
		        android:id="@+id/user_attend"
		        android:layout_width="20dp"
		        android:layout_height="20dp"
    			android:layout_alignParentRight="true"
    			style="@style/EvtSumTextSmall"
		        android:src="@drawable/blue_question_mark_small" />
		</RelativeLayout>
		
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_marginTop="10dp" >
	        
	         <TextView
		        android:id="@+id/eventCreator"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
			    android:paddingBottom="5dp"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:paddingTop="5dp"
       			android:layout_alignParentLeft="true"
				android:background="@drawable/qna_background"
    			style="@style/EvtSumTextSmall"
		        android:text="Creator"/>
	        
	         <TextView
		        android:id="@+id/eventType"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
			    android:paddingBottom="5dp"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:paddingTop="5dp"
    			style="@style/EvtSumTextSmall"
       			android:layout_alignParentRight="true"
				android:background="@drawable/qna_background"
		        android:text="Type"/>
	         
	    </RelativeLayout>
	    
	  	<TextView
		        android:id="@+id/eventDescription"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
		        android:visibility="gone"
    			style="@style/EvtSumTextSmall"
		        android:text="Description"/>
	  
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:gravity="left|top"
			android:orientation="vertical">
	        
	         <TextView
		        android:id="@+id/eventLocation"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
    			style="@style/EvtSumTextSmall"
		        android:text="Location"/>
	         
	          <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
			    android:paddingBottom="5dp"
				android:gravity="right|bottom"
				android:orientation="vertical">
		        
	              <TextView
			        android:id="@+id/eventDate"
    				style="@style/EvtSumTextSmall"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
	       			android:layout_alignParentRight="true"
	    			android:layout_below="@id/eventLocation"
			        android:text="Date"/>
	        
	    	</LinearLayout>
	    </LinearLayout>
    
	</LinearLayout>
		
</LinearLayout>
