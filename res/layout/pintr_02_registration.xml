<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    style="@style/generalPageBackground"
    tools:context="com.example.pintr_v_0_01.PintrMain" >

    <include layout="@layout/pintr_g_97_entrypages_header_view"/>
  	
	<ScrollView
		android:id="@+id/registrationPage"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
	   
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
	    android:orientation="vertical" >


		<EditText
		    android:id="@+id/emailInput"
       		style="@style/LabelText"
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
			android:paddingRight="20dp"
			android:layout_marginTop="10dp"
    		android:background="@drawable/text_background"
			android:hint="Email address" 
       		android:imeOptions="actionNext"
		    android:inputType="text" 
		    android:ems="10">
		    <requestFocus />
		</EditText>

		<EditText
		    android:id="@+id/handlerInput"
       		style="@style/LabelText"
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
			android:paddingRight="20dp"
			android:layout_marginTop="10dp"
    		android:background="@drawable/text_background"
       		android:imeOptions="actionNext"
		    android:inputType="text" 
			android:hint="Screen name" 
		    android:ems="10">
		</EditText>
	
		<TextView
		    android:id="@+id/locationLabel" 
       		style="@style/LabelText"
			android:paddingTop="10dp"
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Location:" />
		
		<EditText
		    android:id="@+id/locationInput"
       		style="@style/LabelText"
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
			android:paddingRight="20dp"
			android:layout_marginTop="10dp"
    		android:background="@drawable/text_background"
       		android:imeOptions="actionNext"
		    android:inputType="text" 
			android:hint="Enter your location" 
		    android:ems="10">
		</EditText>
		
		
		<EditText
		    android:id="@+id/passwordInput"
       		style="@style/LabelText"
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
			android:layout_marginTop="10dp"
			android:paddingRight="20dp"
		    android:ems="10"
    		android:background="@drawable/text_background"
			android:hint="Password" 
       		android:imeOptions="actionNext"
		    android:inputType="textPassword" >
		</EditText>
		
		
		<EditText
		    android:id="@+id/repeatpasswordInput"
       		style="@style/LabelText"
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
			android:layout_marginTop="10dp"
			android:paddingRight="20dp"
		    android:ems="10"
    		android:background="@drawable/text_background"
			android:hint="Repeat password" 
       		android:imeOptions="actionNext"
		    android:inputType="textPassword" >
		</EditText>
		
	
	    <TextView
	        android:id="@+id/dobLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:paddingTop="10dp"
       		style="@style/LabelText"
	        android:text="Date of birth:"/>
	    
	    
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
		
		    <Spinner
		        android:id="@+id/dob_Year"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
    			style="@style/SpinnerStylesMain"
		        android:layout_marginTop="10dp" />

		    <Spinner
		        android:id="@+id/dob_Month"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
    			style="@style/SpinnerStylesMain"
		        android:layout_marginTop="10dp"  />

		    <Spinner
		        android:id="@+id/dob_Day"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
    			style="@style/SpinnerStylesMain"
		        android:layout_marginTop="10dp" />
		</LinearLayout>
		    
		    
		    
		<LinearLayout
			    android:gravity="center" 
				android:layout_marginTop="20dp"
				android:orientation="vertical"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >
			    
		    
		    
		    <Spinner
		        android:id="@+id/GenderSpinner"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
    			style="@style/SpinnerStylesMain"
		        android:layout_marginTop="10dp" />
		    
			<TextView
			    android:id="@+id/ErrorMessgagingLabel" 
	       		style="@style/LabelText"
				android:paddingTop="20dp"
	            android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="" />
			
			<Button
			    android:id="@+id/RegisterButton"
			    android:background="@drawable/general_button" 
			    style="@style/ButtonText"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Register" />
		</LinearLayout>
		
		    
		    
	    
	</LinearLayout>
	
</ScrollView>


</LinearLayout>
