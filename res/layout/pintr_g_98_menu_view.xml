<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
	android:orientation="horizontal"
    style="@style/generalPageBackground"
    android:id="@+id/menuLayout"
    tools:context="com.example.pintr_v_0_01.PintrMain" >
    
		<LinearLayout
		    android:id="@+id/homeButton"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingBottom="5dp"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:paddingTop="5dp"
			android:background="@color/lightBlue"
			android:layout_weight="1"
			android:gravity="center"
		    android:orientation="horizontal" >
		   
		     <ImageView
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:contentDescription="@string/imagetext"
		        android:src="@drawable/house" />
		     
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/lfpButton"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingBottom="5dp"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:paddingTop="5dp"
			android:background="@color/lightBlue"
			android:layout_weight="1"
			android:gravity="center"
		    android:orientation="horizontal" >
		   
		     <ImageView
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:contentDescription="@string/imagetext"
		        android:src="@drawable/pintr_glossy_small2" />
		     
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/converseButton"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingBottom="5dp"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:paddingTop="5dp"
			android:background="@color/lightBlue"
		    android:layout_weight="1"
			android:gravity="center"
		    android:orientation="horizontal" >
		   
		     <ImageView
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:contentDescription="@string/imagetext"
		        android:src="@drawable/talk" />
		     
		</LinearLayout>
		
	   	
		<LinearLayout
		    android:id="@+id/friendsButton"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingBottom="5dp"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:paddingTop="5dp"
			android:background="@color/lightBlue"
		    android:layout_weight="1"
			android:gravity="center"
		    android:orientation="horizontal" >
		   
		     <ImageView
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:contentDescription="@string/imagetext"
		        android:src="@drawable/person" />
		     
		</LinearLayout>
		
		 
		<LinearLayout
		    android:id="@+id/messagesButton"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingBottom="5dp"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:paddingTop="5dp"
			android:background="@color/lightBlue"
		    android:layout_weight="1"
			android:gravity="center"
		    android:orientation="horizontal" >
		   
		     <ImageView
			    android:id="@+id/messagesImage"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:contentDescription="@string/imagetext"
		        android:src="@drawable/envelope" />
		     
		</LinearLayout>
		
	   	
		<LinearLayout
		    android:id="@+id/eventsButton"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingBottom="5dp"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:paddingTop="5dp"
			android:background="@color/lightBlue"
		    android:layout_weight="1"
			android:gravity="center"
		    android:orientation="horizontal" >
		   
		     <ImageView
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:contentDescription="@string/imagetext"
		        android:src="@drawable/calendar" />
		     
		</LinearLayout>
		
 
		<LinearLayout
		    android:id="@+id/menuToggleArea"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingBottom="5dp"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:paddingTop="5dp"
			android:background="@color/lightBlue"
		    android:layout_weight="1"
			android:gravity="center"
		    android:orientation="horizontal" >
		   
		  		<ToggleButton
		          	android:id="@+id/menuToggle"
			        android:layout_width="30dp"
			        android:layout_height="30dp"
					android:textColor="#FFFFFF" 
					android:shadowColor="#A8A8A8" 
		            android:shadowDx="1"
		            android:shadowDy="1"
		            android:shadowRadius="2" 
					android:background="@drawable/three_dots"
			        android:textOff=""
			        android:textOn=""	        
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"/>
			   
		     
		     
		</LinearLayout>
		
</LinearLayout>
