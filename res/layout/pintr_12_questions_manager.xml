<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pintr_v_0_01.PintrMain" >

<LinearLayout
	android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    style="@style/generalPageBackground">
   
    <include layout="@layout/pintr_g_99_header_view"/>
  
	
	<ScrollView
		android:id="@+id/questionsManagerPage"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
		   
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="20dp"
		    android:orientation="vertical"
		    android:paddingBottom="@dimen/activity_vertical_margin" >
    		
	<!-- "ADD QUESTION" BUTTON -->	   
			<LinearLayout
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="center">
		
				 <Button
			        android:id="@+id/AddQuestionButton"
			        android:background="@drawable/general_button" 
			        style="@style/ButtonText"
					android:paddingLeft="15dp"
					android:paddingRight="15dp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Add A New Question" />
				 	   
			</LinearLayout> 
			
		    <View
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:background="@color/greyMed"/>
		    	   
		    
	<!-- RECENT QUESTION ACIVITY -->				      
		    <LinearLayout
		    	android:orientation="vertical"
				android:id="@+id/RecentQuestionActivityView" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    
				
		        <LinearLayout
					android:id="@+id/RecentQuestionsTitleView" 
			    	android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				    
				    <TextView
					    android:id="@+id/RecentQuestionActivityTitleLabel" 
		        		android:layout_weight="10"
				       	style="@style/SubTitleText"
					    android:paddingLeft="10dp"
					    android:paddingRight="10dp"
					    android:paddingBottom="10dp"
					    android:paddingTop="10dp" 
				        android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:text="Recent Conversations" />
					
					<ImageView
		        		android:layout_weight="1"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
						android:paddingTop="10dp"
						android:paddingBottom="10dp"
					    android:src="@drawable/light_grey_left_arrow" />
					
				</LinearLayout>
				
	    		<LinearLayout
			    	android:orientation="vertical"
					android:id="@+id/RecentQuestionActivitiesDisplayView" 
				    android:paddingLeft="20dp"
				    android:paddingRight="20dp"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				</LinearLayout>
		    
			</LinearLayout>
		    
		    	
		    <View
			    android:layout_width="fill_parent"
			    android:layout_marginTop="10dp"
			    android:layout_height="1dp"
			    android:background="@color/greyMed"/>
		    
		    
	<!-- RECOMMENDED QUESTIONS -->		
		    <LinearLayout
		    	android:orientation="vertical"
				android:id="@+id/RecommendedQuestionsView" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    
		        <LinearLayout
					android:id="@+id/RecommendedQuestionsTitleView" 
			    	android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				    
				    <TextView
					    android:id="@+id/RecommendedQuestionsTitleLabel" 
		        		android:layout_weight="10"
				       	style="@style/SubTitleText"
					    android:paddingLeft="10dp"
					    android:paddingRight="10dp"
					    android:paddingBottom="10dp"
					    android:paddingTop="10dp" 
				        android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:text="Recommended Questions" />
					
					<ImageView
		        		android:layout_weight="1"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
						android:paddingTop="10dp"
						android:paddingBottom="10dp"
					    android:src="@drawable/light_grey_left_arrow" />
					
				</LinearLayout>
				
				 <LinearLayout
			    	android:orientation="vertical"
					android:id="@+id/RecommendedQuestionsDisplayView" 
				    android:paddingLeft="20dp"
				    android:paddingRight="20dp"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				</LinearLayout>		    
		    	
			</LinearLayout>
				
		    <View
			    android:layout_width="fill_parent"
			    android:layout_marginTop="10dp"
			    android:layout_height="1dp"
			    android:background="@color/greyMed"/>
		    
		      
	<!-- FRIENDS QUESTIONS -->		
		    <LinearLayout
		    	android:orientation="vertical"
				android:id="@+id/FriendsQuestionsView" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    
		        <LinearLayout
					android:id="@+id/FriendsQuestionsTitleView" 
			    	android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				    
				    <TextView
					    android:id="@+id/FriendsQuestionsTitleLabel" 
		        		android:layout_weight="10"
				       	style="@style/SubTitleText"
					    android:paddingLeft="10dp"
					    android:paddingRight="10dp"
					    android:paddingBottom="10dp"
					    android:paddingTop="10dp" 
				        android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:text="Friend's Questions" />
					
					<ImageView
		        		android:layout_weight="1"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
						android:paddingTop="10dp"
						android:paddingBottom="10dp"
					    android:src="@drawable/light_grey_left_arrow" />
					
				</LinearLayout>
				
				 <LinearLayout
			    	android:orientation="vertical"
					android:id="@+id/FriendsQuestionsDisplayView" 
				    android:paddingLeft="20dp"
				    android:paddingRight="20dp"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				</LinearLayout>		    
		    	
			</LinearLayout>
				
		    <View
			    android:layout_width="fill_parent"
			    android:layout_marginTop="10dp"
			    android:layout_height="1dp"
			    android:background="@color/greyMed"/>
		    
		    

	<!-- TRENDING VIEW -->					      
		    <LinearLayout
		    	android:orientation="vertical"
				android:id="@+id/TrendingView" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    
		        <LinearLayout
					android:id="@+id/TrendingTitleView" 
			    	android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				    
					<TextView
					    android:id="@+id/TrendingTitleLabel" 
		        		android:layout_weight="10"
				       	style="@style/SubTitleText"
					    android:paddingLeft="10dp"
					    android:paddingRight="10dp"
					    android:paddingBottom="10dp"
					    android:paddingTop="10dp" 
				        android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:text="Trending" />
					
					<ImageView
		        		android:layout_weight="1"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
						android:paddingTop="10dp"
						android:paddingBottom="10dp"
					    android:src="@drawable/light_grey_left_arrow" />
					
				</LinearLayout>
			 
				 <LinearLayout
			    	android:orientation="vertical"
					android:id="@+id/TrendingDisplayView"
				    android:paddingLeft="20dp"
				    android:paddingRight="20dp" 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				</LinearLayout>
				
			</LinearLayout>
			
		    <View
			    android:layout_width="fill_parent"
			    android:layout_marginTop="10dp"
			    android:layout_height="1dp"
			    android:background="@color/greyMed"/>
		    	   
		    

	<!-- YOUR QUESTIONS VIEW -->					      
		    <LinearLayout
		    	android:orientation="vertical"
				android:id="@+id/YourQuestionsView" 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    
		        <LinearLayout
					android:id="@+id/YourQuestionsTitleView" 
			    	android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				    
					<TextView
					    android:id="@+id/YourQuestionsTitleLabel" 
		        		android:layout_weight="10"
				       	style="@style/SubTitleText"
					    android:paddingLeft="10dp"
					    android:paddingRight="10dp"
					    android:paddingBottom="10dp"
					    android:paddingTop="10dp" 
				        android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:text="Your Questions" />
					
					<ImageView
		        		android:layout_weight="1"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
						android:paddingTop="10dp"
						android:paddingBottom="10dp"
					    android:src="@drawable/light_grey_left_arrow" />
					
				</LinearLayout>
			 
				 <LinearLayout
			    	android:orientation="vertical"
					android:id="@+id/YourQuestionsDisplayView"
				    android:paddingLeft="20dp"
				    android:paddingRight="20dp" 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				</LinearLayout>
				
			</LinearLayout>
			
		    		    
		
		    
		    
		</LinearLayout>
		
	</ScrollView>


</LinearLayout>

<include layout="@layout/pintr_g_96_settings_menu_view"/>
    
    
</RelativeLayout>
