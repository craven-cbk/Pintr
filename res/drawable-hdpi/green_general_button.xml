<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item android:state_pressed="true" android:left="2dp" android:top="2dp">
        <shape>
            <solid
                android:color="@color/PintrRed" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <corners
                android:radius="10dp" />
           
        </shape>
    </item>
	
	<item>
    <layer-list>
    
    <item  android:right="3dp" android:bottom="3dp">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/CharcoalGreyBckGd" />
        </shape>
    </item>
               
    
    <item  android:left="2dp" android:top="2dp">        
        <shape>
            <gradient
	            android:type="linear"
	            android:startColor="@color/PintrRed"
	            android:endColor="#ffffff"
	            android:angle="270"/>
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    
</layer-list></item>
</selector>