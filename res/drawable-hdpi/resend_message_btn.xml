<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item android:state_pressed="true" android:left="2dp" android:top="2dp">
		    
        <layer-list>
             <item>
		       <shape>
		            <solid
		                android:color="@color/PintrRed" />
		            <corners
		                android:radius="3dp" />
		           
		        </shape>
		    </item>
		    
	   		<item android:drawable="@drawable/red_x"/>
    
    	</layer-list>
	</item>
	
	<item>
    <layer-list>
	    
	    <item  android:right="3dp" android:bottom="3dp">
	        <shape>
	            <corners android:radius="3dp" />
	            <solid android:color="@color/CharcoalGreyBckGd" />
	        </shape>
	    </item>
	               
	    
	    <item  android:left="2dp" android:top="2dp">        
	        <shape>
	            <solid
	                android:color="@color/white" />
	           
	            <stroke
	                android:width="2dp"
	                android:color="@color/PintrRed" />
	            <corners
	                android:radius="3dp" />
	            <padding
	                android:left="5dp"
	                android:top="5dp"
	                android:right="5dp"
	                android:bottom="5dp" />
	        </shape>
	    </item>
	    
	   	<item android:drawable="@drawable/red_x"/>
    
</layer-list></item>
</selector>