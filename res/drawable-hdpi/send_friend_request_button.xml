<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    
    <item 	android:width="20dp"
			android:height="20dp">
		<layer-list>
	    
		    <item  android:right="3dp" android:bottom="3dp">
		        <shape>
		            <corners android:radius="10dp" />
		            <solid
		                android:color="@color/CharcoalGreyBckGd" />
		        </shape>
		    </item>
		    
		    <item  >        
		        <shape>
		            <gradient
			            android:type="linear"
			            android:startColor="@color/greyMed"
			            android:endColor="#ffffff"
			            android:angle="270"/>
		            <stroke
		                android:width="2dp"
		                android:color="@color/white" />
		            <corners
		                android:radius="10dp" />
		            <padding
		                android:left="7dp"
		                android:top="7dp"
		                android:right="7dp"
		                android:bottom="7dp" />
		        </shape>
		    </item>
		
		</layer-list>
     </item>
	
</selector>