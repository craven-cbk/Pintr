<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    
    <item android:state_pressed="true" 
		android:width="20dp"
		android:height="20dp">
		<layer-list>
		    <item  >        
		        <shape>
		            <solid
		                android:color="@color/white" />
		            <stroke
		                android:width="2dp"
		                android:color="@color/greyMed" />
		            <corners
		                android:radius="10dp" />
		            <padding
		                android:left="7dp"
		                android:top="7dp"
		                android:right="7dp"
		                android:bottom="7dp" />
		        </shape>
		    </item>
		    
		   	<item android:drawable="@drawable/magnifying_glass"/>
		
		</layer-list>
     </item>
	
    
	<item
		android:width="20dp"
		android:height="20dp">
	    <layer-list>
	    
		    <item  android:right="3dp" android:bottom="3dp">
		        <shape>
		            <corners android:radius="5dp" />
		            <solid android:color="@color/CharcoalGreyBckGd" />
		        </shape>
		    </item>
		    
		    <item  android:left="2dp" android:top="2dp">        
		        <shape>
		            <solid
		                android:color="@color/SlateBlueGrey" />
		            <stroke
		                android:width="1dp"
		                android:color="@color/white" />
		            <corners
		                android:radius="5dp" />
		            <padding
		                android:left="7dp"
		                android:top="7dp"
		                android:right="7dp"
		                android:bottom="7dp" />
		        </shape>
		    </item>
		    
		   	<item android:drawable="@drawable/magnifying_glass"/>
		
		</layer-list>
	</item>
</selector>